FloatLayout:
    orientation: "vertical"
    size: root.width, root.height
    canvas:
        Color: 
            rgba: 1, 1, 1, 1

    Label:
        text: "Qunatidade de Linhas X Colunas:"
        font_size: 25
        size_hint: (0.7, 0.1)
        pos_hint: {"center_x": 0.5, "y": 0.9}
        
    GridLayout:    
        cols: 2
        spacing: "5dp"
        rows: 1   

        TextInput:
            id: "qt_linhas"
            font_size: 22
            size_hint_y: None
            height: 40

        TextInput:
            id: "qt_colunas"
            font_size: 22
            size_hint_y: None
            height: 40

        