Auxiliar:
    TelaInicial:
    TelaAlfabeto:
    TelaCriar:

<TelaInicial>:
    name: "tela_inicial"
    FloatLayout:
        padding: 3
        orientation: "vertical"
        Button:
            # text é simplismente texto
            text: "ALFABETO"

            #font_size: tamanho da letra
            font_size: 30

            # Tamanho do botão: 0.38 = largura, 0.1 = altura
            # Obs: o tamanho é feito em porcentagem da tela sendo: 1.0 = 100% e 0.01 = 1%
            size_hint: (0.38, 0.1) 

            # Posicinamento do botão 
            #   x >, y ^ : conta a partir do canto inferior esquerdo do botão
            # center_x, center_y: conta a partir do centro botão
            # Obs: todos levam em consideração o ponto inicial sendo o canto inferior esquedo da tela
            pos_hint: {"center_x": 0.5, "y": 0.4} 

            #color: cor da letra
            color: (255/255, 255/255, 255/255)

            #background_color: cor de fundo
            background_color: 0, 0, 0.4, 1

            # background_normal: com valor vazio retira o cinza padrão dos botões
            background_normal: ""
            on_release:
                app.root.current = "tela_alfabeto"
                root.manager.transition.direction = "left"
            

        Button:
            text: "BRINCAR"
            font_size: 30
            size_hint: (0.38, 0.1)
            pos_hint: {"x": 0.1, "y": 0.28}
            color: (255/255, 255/255, 255/255)
            background_color: 0, 0, 0.4, 1
            background_normal: ""

        Button:
            text: "CRIAR"
            font_size: 30
            size_hint: (0.38, 0.1)
            pos_hint: {"x": 0.5, "y": 0.28}
            color: (255/255, 255/255, 255/255)
            background_color: 0, 0, 0.4, 1
            background_normal: ""
            on_release:
                app.root.current = "tela_criar"
                root.manager.transition.direction = "down"

<TelaCriar>:
    name: "tela_criar"
    FloatLayout:
        Button:
            text: "VOLTAR"
            font_size: 20
            size_hint: (0.2, 0.07)
            pos_hint: {"x": 0.05, "y": 0.92}
            background_color: (255/255, 0/255, 0/255)
            on_release:
                app.root.current = "tela_inicial"
                root.manager.transition.direction = "up"

        Button:
            text: "AVANÇAR"
            font_size: 20
            size_hint: (0.2, 0.07)
            pos_hint: {"x": 0.95, "y": 0.92}
            background_color: (255/255, 0/255, 0/255)
            on_release:
                app.root.current = "tela_inicial"
                root.manager.transition.direction = "up"
                
    GridLayout:
