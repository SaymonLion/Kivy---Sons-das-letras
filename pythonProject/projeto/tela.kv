Auxiliar:
    TelaInicial:
    TelaAlfabeto:
    TelaBrincar:
    TelaCriar:

<TelaInicial>:
    name: "tela_inicial"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'amarelo.jpg'
        Button:
            text: "mudar"
            font_size: 15
            size_hint_x:  0.15
            size_hint_y: None
            height: 50
            background_color: (0/255, 0/255, 255/255)
            pos_hint: {'center_x': 0.95}

        Button:
            text: "ALFABETO"
            font_size: 40
            size_hint_x:  0.7
            size_hint_y: None
            height: 70
            background_color: (0/255, 0/255, 255/255)
            pos_hint: {'center_x': 0.5}
            on_release:
                app.root.current = "tela_alfabeto"
                root.manager.transition.direction = "left"

        Button:
            text: "CRIAR"
            font_size: 40
            size_hint_x:  0.7
            size_hint_y: None
            height: 70
            background_color: (0/255, 0/255, 255/255)
            pos_hint: {'center_x': 0.5}
            on_release:
                app.root.current = "tela_criar"
                root.manager.transition.direction = "up"

        Button:
            text: "BRINCAR"
            font_size: 40
            size_hint_x:  0.7
            size_hint_y: None
            height: 70
            background_color: (0/255, 0/255, 255/255)
            pos_hint: {'center_x': 0.5}
            on_release:
                app.root.current = "tela_brincar"
                root.manager.transition.direction = "right"

        Button:
            text: "SAIR"
            font_size: 40
            size_hint_x:  0.7
            size_hint_y: None
            height: 70
            background_color: (0/255, 0/255, 255/255)
            pos_hint: {'center_x': 0.5}
            on_release: root.sair()

